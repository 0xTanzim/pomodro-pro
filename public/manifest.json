{
  "manifest_version": 3,
  "name": "Pomodoro Pro",
  "version": "1.0.0",
  "description": "A modern Pomodoro timer with task management",
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "activeTab",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Pomodoro Pro"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["report.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon-128.png"
  }
}
